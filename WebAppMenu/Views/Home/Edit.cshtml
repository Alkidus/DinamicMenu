@model WebAppMenu.Models.Table_Access
@{
    ViewBag.Title = "Редактирование элемента";

}
<h2>Редактирование элемента</h2>

<form asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Code" class="control-label">Код меню</label>
        <input type="text" asp-for="Code" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MenuName" class="control-label">Назва, яка відображається на сторінці</label>
        <input type="text" asp-for="MenuName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ParentId" class="control-label">Id батьківського елемента меню</label>
        <input type="number" asp-for="ParentId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label">Статус запису (1-активний, 0-неактивний)</label>
        <input type="number" asp-for="Status" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-warning" />
    </div>
</form>
